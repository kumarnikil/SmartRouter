{
    "name": "Search Router Extension",
    "description": "Routes search queries adaptively to Google or Perplexity!",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["tabs", "storage", "activeTab"],
    "chrome_settings_overrides": {
      "search_provider": {
        "name": "SmartRouter",
        "keyword": "sr",
        "favicon_url": "https://www.perplexity.ai/favicon.ico",
        "search_url": "https://www.perplexity.ai/search?q={searchTerms}",
        "encoding": "UTF-8",
        "is_default": true
      }
    },
    "background": {
      "service_worker": "background.js"
    }
}
  